// Mobile
.contact-page-wrapper-mobile {

  @media $max-xl {
    border 0;
    border-top:10px solid rgba(0,0,0,.3);
    border-bottom:10px solid rgba(0,0,0,.3);
    padding 35px 15px;
    margin-left: -15px;
    margin-right: -15px;
  }

  .title-wrapper {
    text-align center
    .title {
      font-size 24px;
    }
    .subtitle {
      font-size 40px;
      color $red;
      font-weight bold;
      margin-top: -15px;
    }
  }
}

// desktop
.contact-page-wrapper {
  background white;
  border 20px solid rgba(0,0,0,.3);
  border-radius 4px;
  -webkit-background-clip: padding-box; /* for Safari */
  background-clip: padding-box; /* for IE9+, Firefox 4+, Opera, Chrome */
  padding 50px 25px;
  position relative;

  input.form-control, textarea.form-control  {
    border-radius 4px;
  }

  .title-wrapper {
    @media $max-xl {
      text-align center
    }
    span {
      display block
    }
    .title {
      color #231f20;
      font-size 40px;
      @media $max-xl {
        font-size 24px;
      }
    }

    .subtitle {
      color #c00d0e;
      font-size 50px;
      text-transform uppercase;
      font-weight bold;
      margin-top: -20px;
      @media $max-xl {
        font-size 40px;
      }
    }

    p {
      color: #6d6e71;
      margin-bottom 40px;
    }
  }

  &:after {
    content: url(../imgs/icons/casa-carro.png);
    position: absolute;
    left: -72px;
    bottom: -120px;
  }
} // contact-form-wrapper
