.rate-section {

  .rate-list {
    li {
      display flex
      flex-direction row
      align-items center
      margin-top 17px
      margin-bottom 17px

      &:nth-child(1) {
        .progress-bar {
          background-color #2e7a20
        }
      }

      &:nth-child(2) {
        .progress-bar {
          background-color #47b4b1
        }
      }

      &:nth-child(3) {
        .progress-bar {
          background-color #f19800
        }
      }

      .type {
        width 258px;
      }

      .progress {
        width 100%;
        height 10px
      }

      .number {
        width 100px;
      }
    }
  }

}

.rate-number-wrapper {
  box-shadow: 10px 10px 0 #dbdbdb
  padding 15px
  border-radius 10px
  max-width: 260px;

  .stars {
    justify-content space-around
    margin-top 15px
    display flex
    padding 14px
    border 4px solid #e0e0e0
    border-radius 10px
    font-size 25px
  }

  > .rate {
    padding 0 15px
    background-color: #e0e0e0
    text-align center
  }
}
