.tp-auto {
  padding-top 190px;
  @media $max-xl {
    padding-top 180px;
  }
  background-repeat no-repeat
  background-size contain
  background-image var(--bg-desktop)
  @media $max-xl {
    background-image var(--bg-mobile);
  }
  .post-wrapper {
    .title-wrapper {
      @media $max-xl {
        margin-top 25px;
        text-align center
      }
      .title {
        font-size 40px;
        @media $max-xl {
          font-size 25px;
        }
        color black;
        display block;
      }

      .subtitle {
        font-size 60px;
        @media $max-xl {
          font-size 40px;
        }
        color $red;
        display block;
        font-weight bold;
      }
    }
  }
}

.tp-auto-security-options { // seguro auto opções

  background: url("../imgs/sections/backgroud-diferenciais-kaprice.png");
  background-repeat no-repeat;
  background-position bottom center
  padding-bottom 285px;
  @media $max-xl {
    padding-bottom: 84px;
    background-size: contain;
  }

  .title-wrapper {
    font-size 30px;
    margin-bottom 20px;
    @media $max-xl {
      font-size 20px;
      text-align center
      margin-top 50px;
      margin-bottom 0;
    }
    span {
      display block;
      &.subtitle {
        color $red;
        font-weight bold
      }
    }
  }
  .tp-auto-insurance-slick {
    .security-wrapper {
      margin-top 60px;
      .icon {
        height 170px;
        display flex;
        justify-content center;
        align-items center;
      }

      h2 {
        margin-top 35px;
        font-size 23px;
        line-height: 23px;
        height calc(23px * 3)
      }
    }
  }
} // seguro auto opções

.differential-kaprice-wrapper {
  background: black;
  color white;
  @media $max-xl {
    padding-bottom: 45px;
  }
  .title-wrapper {
    padding-top 65px;
    padding-bottom 100px;
    @media $max-xl {
      padding-top 32px;
      padding-bottom 25px;
    }
    span {
      @media $max-xl {
        display block
      }
      &.title {
        font-size 78px;
        @media $max-xl {
          font-size 23px;
        }
      }

      &.subtitle {
        font-size: 116px;
        font-weight bold;
        color $warning
        @media $max-xl {
          font-size 40px;
        }
      }
    }
  }

  .differential-kaprice-wrapper-slick {
    .differential-kaprice-item {
      > div {
        @media $min-xl {
          width 280px;
          margin 0 auto;
        }
        text-align center
      }
      .title-wrapper {
        padding-bottom 30px;

        span {
          display block;
          text-align left;
          @media $max-xl {
            text-align center
          }

          &.title {
            font-size 23px;
          }

          &.subtitle {
            font-size 42px;
          }
        }
      }
      p {
        text-align center
        @media $min-xl {
          text-align left
        }
      }
    }
  }

} // diferrence kaprice wrapper
